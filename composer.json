{
    "name": "sabores/sistema-chamados",
    "type": "project",
    "description": "Sistema de Gestão de Chamados para Sabores Refeitório",
    "homepage": "https://sabores.com.br",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "codeigniter4/framework": "^4.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "scripts": {
        "test": "phpunit"
    },
    "support": {
        "forum": "http://forum.codeigniter.com/",
        "wiki": "https://github.com/codeigniter4/CodeIgniter4/wiki",
        "slack": "https://codeigniterchat.slack.com",
        "source": "https://github.com/codeigniter4/CodeIgniter4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
